		<column name="guestbook_editor_skin" var="guestbook_editor_skin" />
		<column name="guestbook_editor_colorset" var="guestbook_editor_colorset" />
		<column name="input_email" var="input_email" />
		<column name="input_website" var="input_website" />
		<column name="post_use_prefix" var="post_use_prefix" />
		<column name="post_use_suffix" var="post_use_suffix" />
		<column name="post_prefix" default="" var="post_prefix" />
		<column name="post_suffix" default="" var="post_suffix" />
		<column name="timezone" var="timezone" />
		<column name="subscription_date" var="subscription_date" />
        <column name="regdate" var="regdate" default="curdate()" />
